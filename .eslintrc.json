{
    "extends": [
        "airbnb-base"
    ],
    "env": {
        "node": true,
        "commonjs": true,
        "jest": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "rules": {
        "class-methods-use-this": 0,
        "max-len": [
            "error",
            {
                "code": 120
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ],
                "extensions": [
                    ".js"
                ]
            }
        }
    }
}